<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>APPNETLINK - @ViewBag.Title</title>



    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/SweetAlert")
    @Scripts.Render("~/bundles/alert")
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/jquery")

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.js" type="text/javascript"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand text-light" href="#">APPNETLINK</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item ">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link text-light" })
                    </li>

                    <li class="nav-item ">@Html.ActionLink("Buscar Peliculas", "BuscarPelicula", "Movie", new { area = "" }, new { @class = "nav-link text-light" })</li>

                    <li class="nav-item ">@Html.ActionLink("Peliculas", "Index", "Movie", new { area = "" }, new { @class = "nav-link text-light" })</li>

                    <li class="nav-item">@Html.ActionLink("Mis Favoritos", "Index", "ShowMovie", new { area = "" }, new { @class = "nav-link text-light" })</li>

                </ul>


                <div class="dropdown mr-2 d-flex">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="fa fa-user text-light w-50"></span>
                    </a>
                    <ul class="dropdown-menu mr-5 w-25" aria-labelledby="navbarDropdown">
                        <li class="text-light">
                            @Html.ActionLink("Ver Perfil", "Update/" + Session["id_usuario"], "User", new { area = "" }, new { @class = "dropdown-item" })

                        </li>
                        <li class="text-light">
                            @Html.ActionLink("Cerrar sesión", "Logout", "Login", new { area = "" }, new { @class = "dropdown-item" })
                        </li>
                    </ul>
                </div>

                <form class="d-flex text-light">
                    @Session["usuario"]
                </form>

            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - Developing Soft - Proyecto programacion II</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
